<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/createwedding.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Wedding Planner</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark" >
        <span class="navbar-brand">Wedding Planner</span>
        <form  class="form-inline">
            <a href="/wedding" class="btn btn-outline-primary my-2 my-sm-0"> DashBoard</a>
            <a href="/logout" class="btn btn-outline-success my-2 my-sm-0">logout</a> 
        </form>
    </nav>
    <div id="container">
        <h1>Plan you Wedding</h1>
        @model WeddingViewModel
        <form asp-action="CreateWedding" asp-controller="Home" method="POST">
            <span asp-validation-for="wedder_1" style="color:red"></span> 
            <label asp-for="wedder_1">Wedder 1</label>
            <input type="text" asp-for="wedder_1">
            <span asp-validation-for="wedder_2" style="color:red"></span> 
            <label asp-for="wedder_2">Wedder 2</label>
            <input type="text" asp-for="wedder_2">
            <span asp-validation-for="date" style="color:red"></span> 
            <label asp-for="date">Date</label>
            <input type="date" asp-for="date">
            <span asp-validation-for="address" style="color:red"></span> 
            <label asp-for="address">Wedding address</label>
            <input type="text" asp-for="address">
            <button type="submit" class="btn btn-danger">Create</button>
        </form>
    </div>
    
</body>
</html>