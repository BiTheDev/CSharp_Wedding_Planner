
<div id="register">
    <h1>Register</h1>
    @model RegisterViewModel
    <form asp-action="Register" asp-controller="Home" method="POST">
    <span asp-validation-for="first_name" style="color:red"></span> 
    <label asp-for="first_name">First Name: </label> 
    <input class="form-control" type="text" asp-for="first_name">

    <span asp-validation-for="last_name" style="color:red"></span> 
    <label asp-for="last_name">Last Name: </label> 
    <input class="form-control" type="text" asp-for="last_name">

    <span asp-validation-for="email" style="color:red"></span> 
    <label asp-for="email">Email:</label> 
    <input class="form-control" type="text" asp-for="email">

    <span asp-validation-for="password" style="color:red"></span> 
    <label asp-for="password">Password: </label> 
    <input class="form-control" type="password" asp-for="password">

    <span asp-validation-for="confirm" style="color:red"></span> 
    <label asp-for="confirm">Confirm Password: </label> 
    <input class="form-control" type="password" asp-for="confirm">
    <br>
    <button type="submit">Submit</button>
</form>
</div>
 @await Html.PartialAsync("login.cshtml")
